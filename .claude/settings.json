{
  "env": {
    "CLAUDE_FLOW_AUTO_COMMIT": "false",
    "CLAUDE_FLOW_AUTO_PUSH": "false",
    "CLAUDE_FLOW_HOOKS_ENABLED": "true",
    "CLAUDE_FLOW_TELEMETRY_ENABLED": "true",
    "CLAUDE_FLOW_REMOTE_EXECUTION": "true",
    "CLAUDE_FLOW_GITHUB_INTEGRATION": "true",
    "CLAUDE_FLOW_AUTO_RESTORE_SWARMS": "true",
    "CLAUDE_FLOW_SWARM_CONFIG_PATH": ".claude/swarm-topology-config.json",
    "CLAUDE_FLOW_AUTO_TOPOLOGY_SELECTION": "true",
    "CLAUDE_FLOW_PARALLEL_EXECUTION": "true",
    "CLAUDE_FLOW_NEURAL_TRAINING": "true",
    "CLAUDE_FLOW_BOTTLENECK_ANALYSIS": "true",
    "CLAUDE_FLOW_SMART_AUTO_SPAWNING": "true",
    "CLAUDE_FLOW_SELF_HEALING_WORKFLOWS": "true",
    "CLAUDE_FLOW_CROSS_SESSION_MEMORY": "true",
    "CLAUDE_FLOW_MAX_AGENTS": "60",
    "CLAUDE_FLOW_DEFAULT_TOPOLOGY": "hierarchical",
    "CLAUDE_FLOW_EXECUTION_STRATEGY": "parallel",
    "CLAUDE_FLOW_TOKEN_OPTIMIZATION": "true",
    "CLAUDE_FLOW_CACHE_ENABLED": "true",
    "CLAUDE_FLOW_TELEMETRY_LEVEL": "detailed",
    "ANTHROPIC_CUSTOM_HEADERS": "anthropic-beta: interleaved-thinking-2025-05-14",
    "MAX_THINKING_TOKENS": "25000",
    "AWS_PROFILE": "cli-user",
    "AWS_REGION": "us-east-2"
  },
  "permissions": {
    "allow": [
      "Bash(npx claude-flow *)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm test *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push)",
      "Bash(git config *)",
      "Bash(gh *)",
      "Bash(node *)",
      "Bash(which *)",
      "Bash(pwd)",
      "Bash(ls *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(curl * | bash)",
      "Bash(wget * | sh)",
      "Bash(eval *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks pre-edit --file ${file} --auto-assign-agents true --load-context true"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks pre-command --command \"${command}\" --validate-safety true --prepare-resources true"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks pre-task --description \"${description}\" --task-id ${id} --agent-id orchestrator"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks post-edit --file ${file} --format true --update-memory true --train-neural true"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks post-edit --file ${file} --format true --update-memory true --train-neural true"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks post-command --command \"${command}\" --track-metrics true --store-results true"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks post-task --task-id ${id} --analyze-performance true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-flow hooks session-end --generate-summary true --persist-state true --export-metrics true"
          }
        ]
      }
    ]
  }
}