# MisterSmith Configuration
# Copy this file to .env and update values as needed

# Environment (development, staging, production)
ENVIRONMENT=development

# NATS Configuration
NATS_URL=nats://localhost:4222
# NATS_USERNAME=mistersmith
# NATS_PASSWORD=secure-password

# HTTP Configuration
HTTP_PORT=8080
SSE_PORT=3000
BIND_ADDRESS=0.0.0.0

# Timeout Configuration
CIRCUIT_BREAKER_TIMEOUT=100ms
PROCESS_TIMEOUT=10s
AGENT_HEARTBEAT_TIMEOUT=30s
TASK_COMPLETION_TIMEOUT=5m

# AWS Configuration (set to true for AWS integration)
USE_AWS_CONFIG=false
# AWS_REGION=us-east-1
# AWS_PARAMETER_STORE_PREFIX=/mistersmith/dev/
# AWS_SECRETS_PREFIX=mistersmith/dev/

# Runtime Configuration
LOG_LEVEL=info
ENABLE_TELEMETRY=true
ENABLE_CIRCUIT_BREAKER=true

# Development Overrides
# MISTERSMITH_CONFIG_OVERRIDE=hardcoded  # Emergency override