{
  "name": "github-mistersmith-management",
  "description": "Automated GitHub workflow for MisterSmith framework development",
  "triggers": {
    "pull_request": ["opened", "synchronize", "reopened"],
    "issue": ["opened", "labeled"],
    "push": ["main", "develop", "feature/*"],
    "release": ["created", "published"]
  },
  "workflows": {
    "pr_review": {
      "steps": [
        {
          "name": "analyze_changes",
          "action": "github_pr_analyze",
          "checks": ["rust_safety", "nats_patterns", "supervision_compliance"]
        },
        {
          "name": "run_tests",
          "action": "cargo_test_suite",
          "parallel": true,
          "tests": ["unit", "integration", "property"]
        },
        {
          "name": "generate_feedback",
          "action": "ai_code_review",
          "agents": ["rust-specialist", "async-expert", "security-analyst"]
        }
      ]
    },
    "issue_triage": {
      "steps": [
        {
          "name": "classify_issue",
          "action": "ai_issue_analysis",
          "categories": ["bug", "feature", "documentation", "performance"]
        },
        {
          "name": "assign_priority",
          "action": "priority_scoring",
          "factors": ["user_impact", "complexity", "dependencies"]
        },
        {
          "name": "suggest_assignee",
          "action": "expertise_matching",
          "consider": ["past_contributions", "domain_expertise", "availability"]
        }
      ]
    },
    "documentation_sync": {
      "steps": [
        {
          "name": "detect_api_changes",
          "action": "rust_api_diff",
          "paths": ["src/**/*.rs", "Cargo.toml"]
        },
        {
          "name": "update_docs",
          "action": "rustdoc_generation",
          "output": "docs/api/"
        },
        {
          "name": "update_examples",
          "action": "example_validation",
          "ensure": "compilation_success"
        }
      ]
    }
  },
  "integrations": {
    "opentelemetry": {
      "export_metrics": true,
      "trace_workflows": true,
      "log_aggregation": true
    },
    "slack": {
      "notify_on": ["pr_merge", "release", "critical_issue"],
      "channel": "#mistersmith-dev"
    }
  }
}